apiVersion: apps/v1
kind: Deployment
metadata:
  name: trojanchat
spec:
  replicas: 2
  selector:
    matchLabels:
      app: trojanchat
  template:
    metadata:
      labels:
        app: trojanchat
    spec:
      containers:
      - name: api
        image: trojanchat-api:latest
        ports:
        - containerPort: 8000
        env:
        - name: OPENAI_API_KEY
          valueFrom:
            secretKeyRef:
              name: openai-secret
              key: key

      - name: server
        image: trojanchat-server:latest
        ports:
        - containerPort: 9000