      "id": "2",
      "name": "Call Trojan Chat MCP",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [500, 300]
    },
    {
      "parameters": {
        "channel": "trojan-updates",
        "text": "=USC Chat Update üèà\\nUser: {{$json[\"user\"]}}\\nMessage: {{$json[\"message\"]}}\\nTime: {{$json[\"timestamp\"]}}"
