# ============================
# TrojanChat Environment Config
# ============================

# --- App ---
APP_NAME=TrojanChat
APP_ENV=production
APP_PORT=10000
LOG_LEVEL=info

# --- API / Server ---
API_HOST=0.0.0.0
API_PORT=10000
CORS_ORIGINS=*

# --- Authentication ---
JWT_SECRET=replace_me_with_secure_secret
JWT_EXPIRATION_MINUTES=60

# --- Database ---
DATABASE_URL=mongodb://localhost:27017/trojanchat
DATABASE_NAME=trojanchat

# --- Redis (optional but L7-level) ---
REDIS_URL=redis://localhost:6379/0

# --- GPU / ML ---
USE_GPU=false
CUDA_VISIBLE_DEVICES=0

# --- Monitoring ---
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# --- Security ---
RATE_LIMIT_PER_MINUTE=100
ENABLE_AUTH=true

# --- Deployment ---
RENDER=true
